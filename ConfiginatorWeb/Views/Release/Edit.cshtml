@model ConfiginatorWeb.Models.Release.ViewEditRelease

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

Schema Version: @Html.DropDownListFor(
    m => m.Schemas,
    new SelectList(Model
        .Schemas
        .OrderByDescending(s => s.Version)
        .Select(s => new
        {
            Version = s.Version.ToFullString(),
            Schema = s.Schema.ToJson()
        })
        .ToList(), "Schema", "Version"), "", new {id="ddSchema", onchange="$('#schema').text($('#ddSchema').val());"})

<table style="width: 100%;">
    <thead>
    <tr>
        <th>Value</th>
        <th>Schema</th>
    </tr>
    </thead>
    <tr>
        <td style="vertical-align: top; width: 50%;">
            <input type="text" style="width:100%; height: 200px"/>
        </td>
        <td style="vertical-align: top; width: 50%;">
            <div id="schema">
            </div>
        </td>
    </tr>
</table>