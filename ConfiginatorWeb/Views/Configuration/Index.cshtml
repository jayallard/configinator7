<h2>Global Schemas</h2>
<table class="table">
    @foreach (var t in Model.GlobalSchemas.OrderBy(kv => kv.Name))
    {
        <tr>
            <td>@t.Name</td>
            <td>@t.Description</td>
        </tr>
    }
</table>
